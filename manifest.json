{
  "manifest_version": 3,
  "name": "Conversor de Remessa para Retorno CNAB 400",
  "version": "1.0",
  "description": "Converte arquivos de remessa CNAB 400 para retorno.",
  "permissions": [
    "storage",
    "file://*",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}